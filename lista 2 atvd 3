programa {
  real a, b, c, f, g
  funcao inicio() 
 
    {escreva("\n digite a pontuação do primeiro bimestre a:")
    leia (a)
    escreva("\n digite a pontuação do segundo bimestre b:")
    leia (b)
    escreva("\n digite a pontuação do terceiro bimestre c:")
    leia (c)
    escreva("\n digite a pontuação do quarto bimestre f:")
    leia (f)
    g= (a+b+c+f)/4
    escreva ("\n o resultado das media dos 4 bimestres é:", g)
    }
  }

